<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:padding="9dp"
        android:layout_gravity="center_vertical"
        android:weightSum="3">

        <FrameLayout
            android:id="@+id/player_col"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/music_album_cover"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_weight="3"
                    android:paddingLeft="12dp"
                    android:text="Example Music Song"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:gravity="right"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_arrow_black_48dp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/player_exp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/music_album_cover"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_weight="3"
                    android:paddingLeft="12dp"
                    android:text="Example Music Song"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_queue_music_black_48dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="right"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_more_vert_black_48dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/music_album_cover"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="9dp"
        android:layout_gravity="center_vertical"
        android:weightSum="3">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_repeat_one_black_48dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:src="@drawable/ic_skip_previous_black_48dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/activity_margin"
            android:gravity="center"
            android:src="@drawable/ic_pause_circle_filled_black_24dp"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:src="@drawable/ic_launcher_background"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:src="@drawable/ic_shuffle_black_48dp" />
    </LinearLayout>
</LinearLayout>
